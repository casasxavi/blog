<div class="col-md-3 hidden-xs hidden-xm">
	<ul class="list-group">
		<li class="list-group-item active">Categor√≠as en uso</li>
		{% for category in categories %}
			{% if category.posts|length != null %}
				<li class="list-group-item">		
					<a href="{{path('home_post_category', {'category': category.slug})}}">{{ category.name }}</a>				
					<span class="badge">{{category.posts|length}}</span>
				</li>
			{% endif %}
		{% endfor %}
	</ul> 
</div>

<div class="col-md-3 hidden-xs hidden-xm">
	<ul class="list-group">
		<li class="list-group-item active">Etiquetas</li>
		{% for tag in tags %}
			{% if tag.posts|length != null %}
				<li class="list-group-item">
					<a href="{{ path('front_tag', {'tags': tag.name }) }}"><span class="label label-warning">{{ tag.name }}</span></a>
					<span class="badge">{{ tag.posts|length }}</span>
				</li>
			{% endif %}
		{% endfor %}
	</ul>
</div>

